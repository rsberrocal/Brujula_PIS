<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="?android:attr/colorPrimaryDark"
        tools:background="@color/colorAccent">

    <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="top|center"
            tools:background="@android:color/holo_purple"
    >
        <TextView
                android:text="N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/North"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="56sp"
        />
    </FrameLayout>
    <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="start|center"
            tools:background="@android:color/holo_green_light"
    >
        <TextView
                android:text="W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/West"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="56sp"
        />
    </FrameLayout>

    <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
    >

        <Button
                android:text="Brujula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnBrujula"
                android:layout_gravity="center"
        />
    </FrameLayout>

    <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="end|center"
            tools:background="@android:color/darker_gray"
    >
        <TextView
                android:text="E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Est"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="56sp"
        />
    </FrameLayout>
    <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="bottom|center"
            android:background="@android:color/holo_red_light"
    >
        <TextView
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/South"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat" android:textSize="56sp"
        />
    </FrameLayout>

</FrameLayout>